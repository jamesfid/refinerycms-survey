<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(survey) -%>">
  <span class='title'>
    <%=h survey.name %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), survey_url(survey),
        :title => t('.view_live'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_survey_path(survey),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_survey_path(survey),
        :class => "cancel confirm-delete",
        :title => t('.delete') %>
  </span>
</li>
